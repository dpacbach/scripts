#!/usr/bin/env stack
-- stack script --resolver lts-13.25
import Text.Printf (printf)

printStats :: String -> (Float, Float) -> Float -> Float -> IO ()
printStats name (xRes, yRes) inches distance =
    putStrLn name >>
    printf "  dpi:   %f\n  theta: %f\n" dpi (360.0*theta)
  where
    dpi :: Float
    dpi = sqrt (xRes*xRes + yRes*yRes) / inches
    theta = atan ((1.0/dpi)/distance)

main = do
  printStats "Work"     (2560.0,1440.0) 27.5 24.0
  printStats "Darter"   (1920.0,1080.0) 15.6 18.0
  --printStats "Galago"   (3840.0,2160.0) 13.0 12.0
  --printStats "Thinkpad" (1920.0,1080.0) 14.0 12.0
